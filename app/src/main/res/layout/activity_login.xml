<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/dark_gray"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/ic_logo" android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextTextEmailAddress"
            android:backgroundTint="@color/green" android:hint="Email"
            android:textColor="@color/green" android:textColorHint="@color/light_gray"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginTop="100dp"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp" android:paddingLeft="20dp"
            android:paddingBottom="20dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextTextPassword"
            android:backgroundTint="@color/green" android:hint="password"
            android:textColorHint="@color/light_gray" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress" android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp" android:layout_marginTop="45dp" android:paddingLeft="20dp"
            android:paddingBottom="20dp"/>
    <Button
            android:text="Войти"
            android:layout_width="0dp"
            android:layout_height="60dp" android:id="@+id/button2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword" android:layout_marginTop="60dp"
            android:backgroundTint="@color/green" android:layout_marginStart="32dp" android:layout_marginEnd="32dp"
            android:textSize="20sp" app:cornerRadius="10dp"/>
    <TextView
            android:text="Еще нет аккаунта? Зарегистрируйтесь"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/button2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textColor="@color/white"
            android:layout_marginTop="8dp" android:textSize="16sp"/>
    <TextView
            android:text="Вход"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
            android:textSize="28sp" android:layout_marginStart="40dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>